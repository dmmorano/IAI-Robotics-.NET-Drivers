        <Button x:Name="button" Content="Read Coils" HorizontalAlignment="Left" Margin="49,69,0,521" VerticalAlignment="Stretch" Width="130" Click="button_Click"/>
        <TextBox x:Name="tbStartingAddress" HorizontalAlignment="Left" Height="36" Margin="49,124,0,0" TextWrapping="Wrap" Text="starting address" VerticalAlignment="Top" Width="130"/>
        <TextBox x:Name="tbCoilsResult" HorizontalAlignment="Left" Height="36" Margin="220,78,0,0" TextWrapping="Wrap" Text="answer from Server" VerticalAlignment="Top" Width="148"/>
        <Button x:Name="button1" Content="Connect" HorizontalAlignment="Left" Margin="49,10,0,0" VerticalAlignment="Top" Width="130" Click="button1_Click"/>

    </Grid>
</Page>
